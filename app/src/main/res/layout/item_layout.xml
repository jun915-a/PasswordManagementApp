<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_frame"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/item_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_name_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/item_name_title_text"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coron_name"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/coron"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_name_title"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="8sp"
            android:background="#00000000"
            android:enabled="false"
            android:hint="@string/item_name_title_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@drawable/theme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/coron_name"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/item_id_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/item_name_id_text"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_name" />

        <TextView
            android:id="@+id/coron_id"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/coron"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_name_title"
            app:layout_constraintTop_toBottomOf="@+id/item_name" />

        <EditText
            android:id="@+id/item_id"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="8sp"
            android:background="#00000000"
            android:enabled="false"
            android:hint="@string/item_name_id_hint"
            android:inputType="text"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@drawable/theme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/coron_id"
            app:layout_constraintTop_toBottomOf="@+id/item_name" />

        <ImageButton
            android:id="@+id/copy_id_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/copy_button"
            android:backgroundTint="@color/black"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_id" />

        <TextView
            android:id="@+id/item_password_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/item_name_password_text"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_id_title" />

        <TextView
            android:id="@+id/coron_password"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/coron"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_name_title"
            app:layout_constraintTop_toBottomOf="@+id/item_id_title" />

        <EditText
            android:id="@+id/item_password"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="8sp"
            android:background="#00000000"
            android:enabled="false"
            android:hint="@string/item_name_password_hint"
            android:inputType="text"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@drawable/theme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/coron_password"
            app:layout_constraintTop_toBottomOf="@+id/item_id"
            tools:ignore="TextFields" />

        <ImageButton
            android:id="@+id/copy_password_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/copy_button"
            android:backgroundTint="@color/black"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_password" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@android:drawable/ic_menu_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/confirm_text"
        app:background="@drawable/button_layout"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_area"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon">

        <TextView
            android:id="@+id/change_name_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/menu_text_back"
            android:gravity="center_vertical"
            android:text="@string/change_name_text"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/change_id_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/menu_text_back"
            android:gravity="center_vertical"
            android:text="@string/change_id_text"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_name_text" />

        <TextView
            android:id="@+id/change_password_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/menu_text_back"
            android:gravity="center_vertical"
            android:text="@string/change_password_text"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_id_text" />

        <TextView
            android:id="@+id/item_delete_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/menu_text_back"
            android:gravity="center_vertical"
            android:text="@string/item_delete_text"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_password_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
